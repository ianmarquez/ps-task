{
    "env": {
        "browser": true,
        "commonjs": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "no-param-reassign": 0
    }
}
